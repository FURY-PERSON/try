{
  "name": "fact-front-mobile",
  "version": "1.0.0",
  "private": true,
  "main": "expo-router/entry",
  "scripts": {
    "android:development-debug": "NODE_ENV=development npx expo run:android --variant=debug",
    "android:development-release": "NODE_ENV=development npx expo run:android --variant=release",
    "android:production-debug": "NODE_ENV=production npx expo run:android --variant=debug",
    "android:production-release": "NODE_ENV=production npx expo run:android --variant=release",



    "ios:development-debug": "NODE_ENV=development npx expo run:ios --configuration Debug",
    "ios:development-release": "NODE_ENV=development npx expo run:ios --configuration Release",
    "ios:production-debug": "NODE_ENV=production npx expo run:ios --configuration Debug",
    "ios:production-release": "NODE_ENV=production npx expo run:ios --configuration Release",

    "start:development": "NODE_ENV=development expo start --reset-cache",
    "start:production": "NODE_ENV=production expo start --reset-cache",


    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "test": "jest",
    "postinstall": "node scripts/postinstall.js",
    "clean": "react-native-clean-project"
  },
  "dependencies": {
